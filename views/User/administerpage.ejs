<!--관리자 화면 페이지-->
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Help :: 관리자 사이트</title>
    <link rel='stylesheet' href='/stylesheets/index.css' />
</head>

<body>
        <% for(var i = 0; i < profile.length; i++) { %>
            <xmp> 이름 : <%= profile[i].name %>     ID : <%= profile[i].id %>     전화번호 : <%= profile[i].phone %>     포인트 : <%= profile[i].point %> </xmp>
            <% } %>
    
    <form method="POST" action="./admin/Add">
        <!-- ID와 PW를 넘김 -->
        <h1>포인트 추가하기!</h1>
        <label>유저</label>
        <select class="form-control" name="field">
            <% for(var i = 0; i < profile.length; i++) { %>
            <option><%= profile[i].name %></option>
            <% } %>
        </select>
        <p>추가할 포인트 수량 : <input type="text" name="point"></p>
        <p><input type="submit" value="추가"></p>
    </form>

    <form method="POST" action="./admin/Remove">
        <!-- ID와 PW를 넘김 -->
        <h1>포인트 삭제하기!</h1>
        <p>상품명 : <input type="text" name="name"></p>
        <p>코드(0~14) : <input type="number" name="code"></p>
        <p>가격 : <input type="number" name="price"></p>
        <p>갯수 : <input type="number" name="amount"></p>
        <p><input type="submit" value="추가"></p>
    </form>


    <form method="POST" action="./exchange/Add">        <!-- ID와 PW를 넘김 -->
        <h1>상품 추가하기!</h1>
        <p>상품명 : <input type="text" name="name"></p>
        <p>코드(0~14) : <input type="number" name="code"></p>
        <p>가격 : <input type="number" name="price"></p>
        <p>갯수 : <input type="number" name="amount"></p>
        <p><input type="submit" value="추가"></p>
    </form>
    <form method="POST" action="./exchange/Remove">        <!-- ID와 PW를 넘김 -->
        <h1>상품 삭제하기!</h1>
        <p>코드(0~14) : <input type="number" name="code"></p>
        <p><input type="submit" value="삭제"></p>
    </form>
</body>
</html>
<!--관리자 화면 페이지-->
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Help :: 관리자 사이트</title>
    <link rel='stylesheet' href='/stylesheets/index.css' />
</head>

<body>
    <% if(post != null) { %>
    <% post.reverse(); %>
    <% for(i = 0; i < post.length; i++) { %>
    <hr>
    <p>제목: <%= post[i].title %></p>
    <p>최근 수정된 날짜: <%= post[i].writedate %></p>
    <p>이름: <%= post[i].name %></p>
    <b>
        <p><%= post[i].post %></p>
    </b>
    <p>분류: <%= post[i].field %></p>
    <p>지역: <%= post[i].town %></p>
    <hr>
    <% } %>
    <% } %>
    <form method="POST" action="./exchange/Add">        <!-- ID와 PW를 넘김 -->
        <h1>추가하기!</h1>
        <p>상품명 : <input type="text" name="name"></p>
        <p>코드(0~14) : <input type="number" name="code"></p>
        <p>가격 : <input type="number" name="price"></p>
        <p>갯수 : <input type="number" name="amount"></p>
        <p><input type="submit" value="추가"></p>
    </form>
    <form method="POST" action="./exchange/Remove">        <!-- ID와 PW를 넘김 -->
        <h1>삭제하기!</h1>
        <p>코드(0~14) : <input type="number" name="code"></p>
        <p><input type="submit" value="삭제"></p>
    </form>
</body>
</html>